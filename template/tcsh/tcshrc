# -- mode: tcsh; tab-width: 4; indent-tabs-mode: t; indent-style: tab; encoding: utf-8; --
# /etc/tcsh/tcshrc

# Do not edit this file.
# Place your readable configs in /etc/tcsh/tcshrc.d/*.csh
# Place your readable completion configs in /etc/tcsh/compl.d/*.csh

# (non-)interactive absolute values
set parseoctal
set echo_style=both
set backslash_quote

# environment variables
if ( -r tcsh.env ) then
    source tcsh.env
endif
set -f path = ( $path /usr/local/sbin /usr/local/bin /usr/bin /usr/sbin /sbin /bin )

# if its a shell script, exit
if ( ! $?prompt ) exit

# it is interactive shell

# load completition
[ -r complete.tcsh ] && source complete.tcsh
if ( -d complt.d ) then
	set list=`ls compl.d/*.csh`
	foreach f ( $list )
		[ -r $f ] && source $f
	end
endif

# load modules
if ( -d tcshrc.d ) then
	set list=`ls tcshrc.d/*.csh`
	foreach f ( $list )
		[ -r $f ] && source $f
	end
endif

# cleanup
unset f list
